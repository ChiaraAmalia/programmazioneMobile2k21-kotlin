<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><![CDATA[
    tools:context=".view.ListaSpesa">
    ]]>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/compr"
            android:textColor="@color/arancione_scuro"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recspesa"
            android:layout_width="match_parent"
            android:layout_height="368dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/paginagialla2"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/compra"
            android:backgroundTint="@color/rosso_chiaro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compra" />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
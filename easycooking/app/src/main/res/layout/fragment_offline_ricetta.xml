<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/photo1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ricvuota" />

    <TextView
        android:id="@+id/immagine_ricetta_vista1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#C9FFFFFF"
        android:fontFamily="@font/bungee"
        android:gravity="bottom"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@color/bordeaux"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/photo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/arancione_sbiadito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView271"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Preparazione:"
                android:textColor="@color/bordeaux"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView281"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Cottura:"
                android:textColor="@color/bordeaux"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView291"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Tempo tot:"
                android:textColor="@color/bordeaux"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:id="@+id/tempo_preparazione1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tempo_cottura1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tempo_totale1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="TextView"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F8E9BC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView331"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="@string/cat"
                android:textColor="@color/bordeaux"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView341"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="@string/naz"
                android:textColor="@color/bordeaux"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">

            <TextView
                android:id="@+id/categoria1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/origine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="TextView"
                android:textSize="14sp" />


        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout31"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F8E9BC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout21">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">


            <TextView
                android:id="@+id/textView351"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="@string/intol"
                android:textColor="@color/bordeaux"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView361"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="@string/vegano"
                android:textColor="@color/bordeaux"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">


            <TextView
                android:id="@+id/intolleranze1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/vegano1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="TextView"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout41"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout31">

        <TextView
            android:id="@+id/textView411"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonada"
            android:text="@string/ingr"
            android:textColor="@color/bordeaux"
            android:textSize="20sp" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp">
            <TextView
                android:id="@+id/Ingredienti1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Quantità1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Unitàdimisura1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="9dp"
                android:text="TextView"
                android:textSize="14sp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout41">

        <TextView
            android:id="@+id/textView431"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonada"
            android:text="@string/proc"
            android:textColor="@color/bordeaux"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/procedimento_vista1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


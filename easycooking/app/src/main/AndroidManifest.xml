<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easycooking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DB.DispensaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyCooking"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.Activity_gestione"></activity>
        <activity android:name=".view.Activity_inserisci_dispensa" />
        <activity android:name=".view.Activity_ricetta" />
        <activity android:name=".spesa.Activity_compra" />
        <activity android:name=".view.Base_nonReg" />
        <activity android:name=".auth.RegistrationActivity" />
        <activity android:name=".view.Base" />
        <activity android:name=".view.Ispirami"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>